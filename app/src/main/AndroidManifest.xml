<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.earthx.sentimenter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.analytics.sentiment.ResultSentimentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.analytics.sentiment.SentimentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.status.FailedActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.analytics.graph.ResultActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.analytics.graph.GraphActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.authentication.signup.SignupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.authentication.signin.SigninActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.splash.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.onboarding.OnboardingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>